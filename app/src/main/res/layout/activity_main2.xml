<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom25"
    tools:context=".MainActivity2">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/kan" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_marginTop="70dp"
        android:textSize="20dp"
        android:textColor="#fff"
        android:hint="@string/username"
        android:drawableLeft="@drawable/ic_action_user"
        android:background="#11000000"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextmail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_below="@+id/editTextTextPersonName"
        android:layout_alignRight="@id/editTextTextPassword"
        android:layout_alignLeft="@id/editTextTextPassword"
        android:layout_marginTop="20dp"
        android:hint="@string/email"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_action_mail"
        android:background="#11000000"
        android:textColor="#fff"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/editTextTextPersonName"
        android:layout_alignRight="@+id/editTextTextPersonName"
        android:layout_below="@+id/editTextmail"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_action_pass"
        android:background="#11000000"
        android:hint="@string/password"
        android:ems="10"
        android:inputType="textPassword" />

    <androidx.cardview.widget.CardView
        android:id="@+id/firstbutton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/editTextTextPassword"
        android:layout_marginTop="68dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#E91E63"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>






</RelativeLayout>